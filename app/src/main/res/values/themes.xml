<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GlassApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="TextTheme2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="TextTheme1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="MarginTheme">
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
    </style>
    <style name="EditTextTheme" parent="TextAppearance.AppCompat">
        <item name="colorControlActivated">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/trans</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="CardTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:elevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">5dp</item>
    </style>
    <style name="CardTheme1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:elevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">5dp</item>
    </style>
    <style name="CardTheme2Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">@dimen/_25sdp</item>
        <item name="android:layout_marginLeft">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:elevation">4dp</item>
        <item name="cardBackgroundColor">@color/spinner_bg</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorControlActivated">@color/black</item>
    </style>
</resources>